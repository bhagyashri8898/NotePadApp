<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhagyashri.notepadapp.WriteNoteActivity"
    >
    
    <ImageView
        android:id="@+id/imgbrush"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_brush_black_24dp"
        android:layout_margin="5dp"/>


    <ImageView
        android:id="@+id/imgcheck_box"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_check_box_black_24dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imgbrush"/>


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_image_black_24dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imgcheck_box"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <Button
            android:id="@+id/btnsave"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@android:color/background_light"
            android:layout_gravity="right"
            android:text="@string/Save"
            android:textSize="15sp"
            android:onClick="onSave"/>

        <EditText
            android:id="@+id/edtAddtitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="@string/Enter_Title"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/edtAddnote"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="@string/Enter_Note"
            android:textSize="15sp"/>

    </LinearLayout>
</RelativeLayout>
